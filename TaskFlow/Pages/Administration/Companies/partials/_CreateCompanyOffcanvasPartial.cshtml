@model BW_WEB.Pages.Administration.Companies.CompanyCRUDModel

<!-- Offcanvas para la creación de una nueva empresa -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="createCompanyOffcanvas" aria-labelledby="createCompanyOffcanvasLabel">

    <!-- Encabezado del offcanvas con título y botón para cerrar -->
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="createCompanyOffcanvasLabel">Crear Empresa</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <!-- Cuerpo del offcanvas donde se encuentra el formulario para crear una empresa -->
    <div class="offcanvas-body mx-0 flex-grow-0">

        <!-- Formulario para la creación de una nueva empresa, se envía usando POST -->
        <form method="post" id="createCompanyForm" asp-page-handler="Post">

            <!-- Campo para ingresar el nombre de la empresa -->
            <div class="mb-6">
                <label for="NewCompany_Nombre" class="form-label">Nombre</label>
                <input asp-for="NewCompany.Nombre" class="form-control" id="NewCompany_Nombre" placeholder="Nombre corto de la empresa" />
                <span asp-validation-for="NewCompany.Nombre" class="text-danger"></span>
            </div>

            <!-- Campo para ingresar el nombre largo o formal de la empresa -->
            <div class="mb-6">
                <label for="NewCompany_NombreLargo" class="form-label">Nombre Largo</label>
                <input asp-for="NewCompany.NombreLargo" class="form-control" id="NewCompany_NombreLargo" placeholder="Nombre largo de la empresa" />
                <span asp-validation-for="NewCompany.NombreLargo" class="text-danger"></span>
            </div>

            <!-- Campo para ingresar la dirección de la empresa -->
            <div class="mb-6">
                <label for="NewCompany_Direccion" class="form-label">Dirección</label>
                <input asp-for="NewCompany.Direccion" class="form-control" id="NewCompany_Direccion" placeholder="Dirección de la empresa" />
                <span asp-validation-for="NewCompany.Direccion" class="text-danger"></span>
            </div>

            <!-- Campo para ingresar el teléfono de la empresa -->
            <div class="mb-6">
                <label for="NewCompany_Telefono" class="form-label">Teléfono</label>
                <input asp-for="NewCompany.Telefono" class="form-control" id="NewCompany_Telefono" placeholder="Teléfono de contacto" />
                <span asp-validation-for="NewCompany.Telefono" class="text-danger"></span>
            </div>

            <!-- Campo para ingresar el correo electrónico de la empresa -->
            <div class="mb-6">
                <label for="NewCompany_Email" class="form-label">Email</label>
                <input asp-for="NewCompany.Email" class="form-control" id="NewCompany_Email" placeholder="Email de contacto" />
                <span asp-validation-for="NewCompany.Email" class="text-danger"></span>
            </div>

            <!-- Selector para la Agencia -->
            <div class="mb-6">
                <label for="NewCompany_SelectedAgency" class="form-label">Agencia</label>
                <select asp-for="NewCompany.SelectedAgency" asp-items="Model.AvailableAgenciesSelectList" class="form-select" id="NewCompany_SelectedAgency">
                    <option value="">Seleccionar Agencia</option>
                </select>
                <span asp-validation-for="NewCompany.SelectedAgency" class="text-danger"></span>
            </div>

            <!-- Selector para el Subsistema de Transporte -->
            <div class="mb-6">
                <label for="NewCompany_SelectedSubsistemaTransporte" class="form-label">Subsistema de Transporte</label>
                <select asp-for="NewCompany.SelectedSubsistemaTransporte" asp-items="Model.AvailableSubsistemasSelectList" class="form-select" id="NewCompany_SelectedSubsistemaTransporte">
                    <option value="">Seleccionar Subsistema</option>
                </select>
                <span asp-validation-for="NewCompany.SelectedSubsistemaTransporte" class="text-danger"></span>
            </div>

            <!-- Botones para enviar o cancelar el formulario -->
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary me-3">Crear Empresa</button>
                    <button type="reset" class="btn btn-label-danger" data-bs-dismiss="offcanvas">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>
